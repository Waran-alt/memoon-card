<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="036-review-logs-stability-after" author="developer">
        <comment>Add stability_after and difficulty_after to review_logs for before/after FSRS state</comment>

        <addColumn tableName="review_logs">
            <column name="stability_after" type="decimal(10,2)">
                <constraints nullable="true"/>
            </column>
            <column name="difficulty_after" type="decimal(4,2)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
