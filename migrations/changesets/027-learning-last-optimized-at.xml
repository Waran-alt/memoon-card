<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="027-learning-last-optimized-at" author="assistant">
        <comment>Track when short-term (learning) optimizer was last run; learning params are optimizer-driven, not user-editable.</comment>
        <addColumn tableName="user_settings">
            <column name="learning_last_optimized_at" type="timestamp with time zone">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
