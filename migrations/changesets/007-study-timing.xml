<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-study-timing" author="developer">
        <comment>Add study session timing fields to review_logs (shown_at, revealed_at, session_id)</comment>
        <addColumn tableName="review_logs">
            <column name="shown_at" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="revealed_at" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="session_id" type="uuid">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <createIndex indexName="idx_review_logs_session_id" tableName="review_logs">
            <column name="session_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
