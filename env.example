# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development

# =============================================================================
# FRONTEND
# =============================================================================
FRONTEND_PORT=3002
NEXT_PUBLIC_API_URL=http://localhost:4002

# =============================================================================
# BACKEND
# =============================================================================
BACKEND_PORT=4002
PORT=4002

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=memoon_card_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# =============================================================================
# DATABASE CONNECTION (for Liquibase)
# =============================================================================
DATABASE_URL=jdbc:postgresql://localhost:5432/memoon_card_db

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# IMPORTANT: Generate a strong secret (at least 32 characters)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-this-in-production

# Access Token (short-lived, used for API requests)
# Recommended: 15m (15 minutes) to 1h (1 hour)
# Shorter = more secure, but requires more frequent refresh
JWT_ACCESS_EXPIRES_IN=15m

# Refresh Token (long-lived, used to get new access tokens)
# Recommended: 7d (7 days) to 30d (30 days)
# Longer = better UX, but higher risk if compromised
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3002
# Optional: Comma-separated list of allowed origins
# CORS_ORIGINS=http://localhost:3002,https://yourdomain.com

# =============================================================================
# RATE LIMITING
# =============================================================================
# Window in milliseconds (default: 15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window (default: 100)
RATE_LIMIT_MAX=100

# =============================================================================
# REQUEST LIMITS
# =============================================================================
# Maximum request body size (default: 10mb)
MAX_REQUEST_SIZE=10mb
